<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2sp"
    android:background="@drawable/event_border_green"
    android:padding="10sp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10sp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_event_check" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/icon">

        <TextView
            android:id="@+id/event_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NFC_TAPPED"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_header"
            android:text="message and another message"
            android:textSize="10sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <TextView
        android:id="@+id/card_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="10pm"
        android:textColor="@color/black"
        android:textSize="10sp" />

</RelativeLayout>