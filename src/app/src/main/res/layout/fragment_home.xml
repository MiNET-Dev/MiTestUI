<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_fab_update"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15sp"
        android:backgroundTint="@color/purple_700"
        android:contentDescription="fab_update"
        android:src="@drawable/ic_question_white"
        android:visibility="gone"
        app:borderWidth="0sp"
        app:tint="@android:color/white" />

    <LinearLayout
        android:id="@+id/home_update_notification_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingTop="10sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_update_notification_layout"
        android:foregroundGravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_imei"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_imei" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_imei"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="IMEI"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_imei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_mac"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mac_address" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_mac"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="MAC ADDRESS"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_mac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_ip"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_ip_address" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_ip"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="IP ADDRESS"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_ip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_serial"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_serial" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_serial"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="DEVICE SERIAL"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_serial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="APP VERSIONS"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_service_info"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_info" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_service_info"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="SERVICE VERSION"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_service_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_ui_info"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_info" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_ui_info"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="NEW UI VERSION"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_ui_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="TELEMETRY"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_battery"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_battery" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_battery"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="BATTERY"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_battery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_temp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_temperature" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_temp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="TEMPERATURE"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_input"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_input_voltage" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_input"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="INPUT"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_version"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_info" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_version"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="VERSION"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="v1.5"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/home_ic_battery_status"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_battery_status" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_battery_status"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="BATTERY STATUS"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_battery_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="~"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="PRINTER TAMPERS"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/border"
                android:elevation="7dp"
                android:padding="10sp">

                <RadioButton
                    android:id="@+id/home_ic_printer_tray"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20sp"
                    android:adjustViewBounds="true"
                    android:maxWidth="70dp"
                    android:maxHeight="70dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_info" />

                <LinearLayout
                    android:id="@+id/home_layout_printer_tray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/home_ic_printer_tray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10sp"
                        android:text="PRINTER TRAY"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_home_printer_tray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10sp"
                        android:text="charging"
                        android:textSize="10sp" />
                </LinearLayout>

                <RadioButton
                    android:id="@+id/home_ic_printer_paper"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_toEndOf="@+id/home_layout_printer_tray"
                    android:adjustViewBounds="true"
                    android:maxWidth="70dp"
                    android:maxHeight="70dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_info" />

                <LinearLayout
                    android:id="@+id/home_layout_printer_paper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/home_ic_printer_paper"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10sp"
                        android:text="PRINTER TRAY"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_home_printer_paper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10sp"
                        android:text="charging"
                        android:textSize="10sp" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="SENSOR TAMPERS"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <RadioButton
                        android:id="@+id/home_ic_internal_tamper"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_info" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_internal_tamper"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="INTERNAL"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_home_internal_tamper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="on"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="155sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/border"
                    android:elevation="7dp"
                    android:padding="10sp">

                    <RadioButton
                        android:id="@+id/home_ic_bracket_tamper"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20sp"
                        android:adjustViewBounds="true"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_info" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/home_ic_bracket_tamper"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:text="BRACKET"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
